{
  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./build/",
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "target": "ES5",
    "moduleResolution": "node",
    "baseUrl": "src",
    "paths": {
      "@components/*": ["components/*"],
      "@css/*": ["css/*"],
      "@utils/*": ["utils/*"],
      "@assets/*": ["assets/*"],
    }
  },
  "exclude": [
    "node_modules",
    "typings/browser.d.ts",
    "typings/browser"
  ]
}
